<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('_css') %>
        <style>
            div {
                position: relative;
            }

            .container {
                width: 100%;
                overflow: hidden;
            }

            .right-aligned {
                float: right;
            }

            .container {
                text-align: right;
            }
            .image {
            position: absolute;
            left: 50px;
            top: 50px;
        }
        </style>
</head>

<body>
    <%- include('_navbarUser') %>
        <div style="margin: 50px 200px;">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th scope="col" style="text-align: center;">Jenis Dokter</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align: center;">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Dokter Ahli Gigi</h5>
                                    <a href="/user/Gigi">
                                        <input class="btn btn-primary" type="button" value="Gigi" name="role">
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td style="text-align: center;">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Dokter Ahli THT</h5>
                                    <a href="/user/THT">
                                        <input class="btn btn-primary" type="button" value="THT" name="role">
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td style="text-align: center;">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Dokter Ahli Kulit</h5>
                                    <a href="/user/Kulit">
                                        <input class="btn btn-primary" type="button" value="Kulit" name="role">
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div><br><br>
        <p style="font-size: 35px; text-align: center;">Article</p>
        <div style="margin: 60px 160px;">
            <form class="d-flex" role="search" action="/user" method="GET">
                <input class="form-control me-2" type="text" placeholder="Search.." aria-label="Search" name="search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
        </div>
        <div  class="d-flex flex-wrap justify-content-center">
            <% data.forEach(el=>{%>
                <div>
                    <div class="card" style="width: 20rem; margin-right: 40px; margin-bottom: 40px;">
                        <img src="<%= el.img %>" class="card-img-top" alt="<%= el.title %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= el.title %>
                            </h5>
                            <p><%= el.description %></p>
                            
                        </div>
                    </div>
                </div>
                <%}) %>
        </div>
        <%- include('_body') %>
</body>

</html>